<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>servlets.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CryptocurrencyServlet</servlet-name>
        <servlet-class>servlets.CryptocurrencyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CryptocurrencyServlet</servlet-name>
        <url-pattern>/cryptocurrency</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MonetaryUnitServlet</servlet-name>
        <servlet-class>servlets.MonetaryUnitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MonetaryUnitServlet</servlet-name>
        <url-pattern>/monetaryunit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PreciousMetalServlet</servlet-name>
        <servlet-class>servlets.PreciousMetalServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PreciousMetalServlet</servlet-name>
        <url-pattern>/preciousmetal</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StockServlet</servlet-name>
        <servlet-class>servlets.StockServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StockServlet</servlet-name>
        <url-pattern>/stock</url-pattern>
    </servlet-mapping>



</web-app>